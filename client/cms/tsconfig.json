{
  "compilerOptions": {
    "target": "es5", 
    "lib": ["dom", "es2015"], 
    "jsx": "react-jsx",
    "moduleResolution": "node", 
    "module": "esnext", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
